<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.JoinServerActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="143dp"
        android:layout_height="44dp"
        android:onClick="onClickBeitreten"
        android:text="Beitreten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerEditplayer" />

    <TextView
        android:id="@+id/headerEditplayer"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Spiel beitreten"
        android:theme="@style/mainMenuHeadTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>