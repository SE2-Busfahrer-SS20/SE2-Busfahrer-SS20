<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SelectCheatsActivity">


    <Button
        android:id="@+id/bt_start"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Cheat auswählen, der im Spiel verfügbar sein soll."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerCheats" />


    <TextView
        android:id="@+id/headerCheats"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Cheats auswählen"
        android:theme="@style/mainMenuHeadTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        style="@style/button_black"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginStart="108dp"
        android:drawableTop="@drawable/ic_light_foreground"
        android:drawablePadding="-50dp"
        android:onClick="onRadioButtonClicked"
        android:text="Light"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button7"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button7"
        style="@style/button_black"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:drawableTop="@drawable/ic_smile"
        android:drawablePadding="-40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Fair"
        android:onClick="onRadioButtonClicked"
        app:layout_constraintBottom_toTopOf="@+id/bt_start"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.579" />

    <Button
        android:id="@+id/button6"
        style="@style/button_black"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:layout_marginEnd="108dp"
        android:drawableTop="@drawable/ic_shake_foreground"
        android:drawablePadding="-50dp"
        android:onClick="onRadioButtonClicked"
        android:text="Shake"
        android:textAlignment="center"
        android:textDirection="locale"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button7"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

